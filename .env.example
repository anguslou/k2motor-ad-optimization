# eBay API Configuration
EBAY_ENVIRONMENT=sandbox
EBAY_READ_ONLY_MODE=true
EBAY_CLIENT_ID=your_sandbox_client_id
EBAY_CLIENT_SECRET=your_sandbox_client_secret

# MCP Server Configuration
MCP_READ_ONLY_MODE=true
MCP_ALLOWED_OPERATIONS=SELECT,SHOW,DESCRIBE,EXPLAIN

# Development Safety
NODE_ENV=development
PREVENT_PRODUCTION_WRITES=true

# OAuth Scopes (read-only)
EBAY_OAUTH_SCOPES=https://api.ebay.com/oauth/api_scope/sell.marketing.readonly,https://api.ebay.com/oauth/api_scope/sell.account.readonly